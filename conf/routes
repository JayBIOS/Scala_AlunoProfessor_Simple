# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET    /                    controllers.HomeController.index
GET		 /aluno					      controllers.HomeController.aluno
GET		 /professor			      controllers.HomeController.professor
GET    /novalista           controllers.HomeController.novalista
POST   /novalista           controllers.HomeController.createlista
GET		 /questoes/:id			  controllers.HomeController.questoes(id: Long)
GET    /novaquestao/:id     controllers.HomeController.novaquestao(id: Long)
POST   /novaquestao/:id     controllers.HomeController.createquestao(id: Long)

GET		 /novaresposta				controllers.HomeController.novarespostaquestao
GET    /questoeslista/:id   controllers.HomeController.questoeslista(id:Long)
GET    /resposta/:id/:a     controllers.HomeController.alunoresposta(id: Long, a: Long)
POST   /resposta/:id        controllers.HomeController.createquestaoaluno(id: Long)

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
